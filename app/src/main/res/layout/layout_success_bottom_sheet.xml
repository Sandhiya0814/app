<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginBottom="24dp"
        android:background="#E2E8F0" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_bg_light_teal" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-60dp"
        android:src="@drawable/ic_email"
        app:tint="@color/primary_teal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Check your email"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="We've sent a password reset link to your registered email address."
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Back to Login"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/primary_teal"
        app:cornerRadius="12dp" />

</LinearLayout>