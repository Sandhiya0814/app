<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".DeviceSelectionActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="#1A1C1E" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Device Selection"
            android:textColor="#1A1C1E"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Target Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#139487"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_target"
                            app:tint="#FFFFFF" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Target SpO₂"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="88 - 92%"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Controlled oxygen required to prevent hypercapnia"
                        android:textColor="#E2E8F0"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Select Delivery Device"
                android:textColor="#1A1C1E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Device Cards -->
            <!-- Venturi Mask with RECOMMENDED badge -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipChildren="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_venturi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/icon_venturi"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="#F0F9F8"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/therapy"
                                app:tint="#139487" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_venturi_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_venturi"
                            android:text="Venturi Mask"
                            android:textColor="#1A1C1E"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="#F1F5F9"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="24% - 60%"
                            android:textColor="#64748B"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_venturi_title"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_toEndOf="@id/icon_venturi"
                            android:text="Precise FiO₂ delivery independent of patient inspiratory flow."
                            android:textColor="#64748B"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_recommended_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/chip_bg_teal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="✓ RECOMMENDED"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:elevation="4dp" />
            </FrameLayout>

            <!-- Nasal Cannula -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_nasal"
                style="@style/CauseSelectionCard">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_nasal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#F8FAFC"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nasal" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/tv_nasal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/icon_nasal"
                        android:text="Nasal Cannula"
                        android:textColor="#1A1C1E"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#F1F5F9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="1 - 4 L/min"
                        android:textColor="#64748B"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nasal_title"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/icon_nasal"
                        android:text="For stable patients requiring low flow oxygen."
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- High Flow Nasal Cannula -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_high_flow"
                style="@style/CauseSelectionCard">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_high_flow"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#FFFBEB"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/highflow" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/tv_hf_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/icon_high_flow"
                        android:text="High Flow Nasal Cannula"
                        android:textColor="#1A1C1E"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#F1F5F9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="30 - 60\nL/min"
                        android:textColor="#64748B"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_hf_title"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/icon_high_flow"
                        android:text="Heated, humidified high flow oxygen."
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Non-Rebreather Mask -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_non_rebreather"
                style="@style/CauseSelectionCard">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_nrm"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#FEF2F2"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nonreb" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/tv_nrm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/icon_nrm"
                        android:text="Non-Rebreather Mask"
                        android:textColor="#1A1C1E"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#F1F5F9"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="60% - 90%"
                        android:textColor="#64748B"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nrm_title"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/icon_nrm"
                        android:text="High concentration oxygen delivery."
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:text="Confirm Device Selection"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/primary_teal"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>