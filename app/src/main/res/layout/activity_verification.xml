<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".VerificationActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_dark" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Verification"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <View
        android:id="@+id/icon_bg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_bg_light_teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/icon_bg"
        app:layout_constraintEnd_toEndOf="@id/icon_bg"
        app:layout_constraintStart_toStartOf="@id/icon_bg"
        app:layout_constraintTop_toTopOf="@id/icon_bg"
        app:tint="@color/primary_teal" />

    <TextView
        android:id="@+id/tv_check_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Check your email"
        android:textColor="@color/text_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_bg" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="We've sent a 6-digit code to your registered device."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_check_email" />

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

        <EditText
            android:id="@+id/otp_1"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

        <EditText
            android:id="@+id/otp_2"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

        <EditText
            android:id="@+id/otp_3"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

        <EditText
            android:id="@+id/otp_4"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

        <EditText
            android:id="@+id/otp_5"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

        <EditText
            android:id="@+id/otp_6"
            style="@style/OtpEditText"
            android:hint="0"
            android:textColorHint="#E2E8F0" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/primary_teal"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_otp" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Resend code"
        android:textColor="@color/primary_teal"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_verify" />

</androidx.constraintlayout.widget.ConstraintLayout>